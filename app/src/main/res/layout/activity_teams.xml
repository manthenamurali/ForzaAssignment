<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.forzafootball.assignment.BaseActivity">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/teams_swipe_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/teams_recycler_view"
            android:layout_width="match_parent"
            android:paddingTop="@dimen/recyclerView_padding_top"
            android:paddingBottom="@dimen/recyclerView_padding_bototm"
            android:layout_height="wrap_content" />

    </android.support.v4.widget.SwipeRefreshLayout>
</RelativeLayout>
