<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/team_item_height"
    android:paddingEnd="@dimen/team_item_horizontal_padding"
    android:paddingStart="@dimen/team_item_horizontal_padding">

    <TextView
        style="@style/team_name_style"
        android:id="@+id/team_name_textView"
        android:layout_width="match_parent"
        android:layout_alignParentStart="true"
        android:layout_height="wrap_content" />

    <TextView
        style="@style/team_country_style"
        android:id="@+id/team_country_textView"
        android:layout_width="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@id/team_name_textView"
        android:layout_height="wrap_content" />

</RelativeLayout>